<section class="about-page">
  <div class="main-title">
    <h1>
      <img src="https://cdn.shopify.com/s/files/1/0715/3156/1246/files/about-head-top.png?v=1677772916" alt="">
      {{ section.settings.main_title | escape }}
    </h1>
    <p>{{ section.settings.main_content | escape }}</p>
  </div>
  <div class="container-fluid">
    <div class="main-wrap">
      <div class="row justify-content-between align-items-end">
        <div class="col-lg-2"></div>
        <div class="col-lg-4">
          <div class="content-wrap">
            {{ section.settings.content }}
          </div>
        </div>
        <div class="col-lg-6 col-12">
          <div class="img-wrap">
            <img src="{{ section.settings.image_1 | image_url }}" alt="">
          </div>
          <div class="img-wrap">
            <img src="{{ section.settings.image_2 | image_url }}" alt="">
          </div>
          <div class="img-wrap">
            <img src="{{ section.settings.image_3 | image_url }}" alt="">
          </div>
        </div>

      </div>
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Custom About Page",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "main_title",
        "default": "Multicolumn",
        "label": "Main Title"
      },
      {
        "type": "text",
        "id": "main_content",
        "default": "Multicolumn",
        "label": "Main Content"
      },
      {
        "type": "image_picker",
        "id": "image_1",
        "label": "Image 1"
      },
      {
        "type": "image_picker",
        "id": "image_2",
        "label": "Image 2"
      }, {
        "type": "image_picker",
        "id": "image_3",
        "label": "Image 3"
      }, {
        "type": "richtext",
        "id": "content",
        "default": "Multicolumn",
        "label": "Content"
      }
    ],
    "presets": [
      {
        "name": "Custom About Page"
      }
    ]
  }
{% endschema %}