<section class="about-sec">
  <div class="main-title">
    <h1>
      <img src="https://cdn.shopify.com/s/files/1/0715/3156/1246/files/about-head-top.png?v=1677772916" alt="">
      {{ section.settings.main_title | escape }}
    </h1>
    <p>{{ section.settings.main_content | escape }}</p>
  </div>
  <div class="container-fluid">
    <div class="about-wrap">
      <div class="row justify-content-between align-items-end">
        <div class="col-lg-4">
          <div class="about-img about-left">
            <img src="{{ section.settings.left_image | image_url }}" alt="">
          </div>
        </div>
        <div class="col-lg-3">
          <div class="about-img about-center">
            <img src="{{ section.settings.center_image | image_url }}" alt="">
          </div>
        </div>
        <div class="col-lg-4">
          <div class="about-img about-right">
            <img src="{{ section.settings.right_image | image_url }}" alt="">
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="content-wrap">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-11 col-12">
          <p>{{ section.settings.content | escape }}</p>
        </div>
      </div>
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Custom About Section",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "main_title",
        "default": "Multicolumn",
        "label": "Main Title"
      },
      {
        "type": "text",
        "id": "main_content",
        "default": "Multicolumn",
        "label": "Main Content"
      },
      {
        "type": "image_picker",
        "id": "image_1",
        "label": "Image 1"
      },
      {
        "type": "image_picker",
        "id": "image_2",
        "label": "Image 2"
      }, {
        "type": "image_picker",
        "id": "image_3",
        "label": "Image 3"
      }, {
        "type": "richtext",
        "id": "content",
        "default": "Multicolumn",
        "label": "Content"
      }
    ],
    "presets": [
      {
        "name": "Custom About Section"
      }
    ]
  }
{% endschema %}