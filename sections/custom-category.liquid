<section class="order-sec">
  <div class="main-title">
    <h1>
      <img src="https://cdn.shopify.com/s/files/1/0715/3156/1246/files/about-head-top.png?v=1677772916" alt="">
      {{ section.settings.main_title | escape }}
    </h1>
    {%- if section.settings.main_content != blank -%}
      <p>{{ section.settings.main_content | escape }}</p>
    {%- endif -%}
  </div>
  <div class="container">
    <div class="order-wrap">
      {%- for block in section.blocks -%}
        <div class="row">
          <div class="col-lg-4 col-12">
            <div class="collection-img">
              <div class="img-wrap">
                <img
                  src="{{ block.settings.image | image_url }}"
                  alt=""
                  class="main-img">
              </div>
              <h2>{{ block.settings.order_title | escape }}</h2>
              {{ block.settings.order_text }}
              <a href="{{ block.settings.button_link }}" class="cat-title">{{ block.settings.button_link }}</a>
            </div>
          </div>
        </div>
      {%- endfor -%}

    </div>
    <div class="button-wrap center">
      <a href="{{ section.settings.main_button_link }}" class="button button--primary">{{ section.settings.main_button_text | escape }}</a>
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Custom Orders Section",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "main_title",
        "default": "Multicolumn",
        "label": "Main Title"
      }, {
        "type": "text",
        "id": "main_content",
        "default": "Multicolumn",
        "label": "Main Content"
      }, {
        "type": "text",
        "id": "main_button_text",
        "default": "Multicolumn",
        "label": "Button Text"
      }, {
        "type": "url",
        "id": "main_button_link",
        "label": "Button Url"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "t:sections.multicolumn.blocks.column.name",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "t:sections.multicolumn.blocks.column.settings.image.label"
          },
          {
            "type": "text",
            "id": "order_title",
            "default": "Multicolumn",
            "label": "Title"
          },
          {
            "type": "richtext",
            "id": "order_text",
            "default": "<p>Multicolumn</p>",
            "label": "Title"
          },
          {
            "type": "text",
            "id": "button_title",
            "default": "Multicolumn",
            "label": "Button Text"
          }, {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom Orders Section",
        "blocks": [
          {
            "type": "column"
          }, {
            "type": "column"
          }
        ]
      }
    ]
  }
{% endschema %}