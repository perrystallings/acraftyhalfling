<link
  rel="stylesheet"
  href="{{ 'section-main-page.css' | asset_url }}"
  media="print"
  onload="this.media='all'">
<link
  rel="stylesheet"
  href="{{ 'component-rte.css' | asset_url }}"
  media="print"
  onload="this.media='all'">

<noscript>{{ 'section-main-page.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}
    px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}
    px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}
      px;
      padding-bottom: {{ section.settings.padding_bottom }}
      px;
    }
  }
  .main-page-title,
  .page-title {
    font-size: 80px;
    color: #fff;
    text-align: center;
    display: block;
  }
  .title-wrap {
    min-height: 250px;
    display: flex;
    align-items: center;
  }

  .title-wrap h1.main-page-title {
    margin: 0;
  }
{%- endstyle -%}

<div class="title-wrap" style="background: url(https://cdn.shopify.com/s/files/1/0715/3156/1246/files/about-bga.png?v=1678090537) center no-repeat;background-size: cover;">
  <div class="page-width page-width--narrow section-{{ section.id }}-padding">
    <h1 class="main-page-title page-title h0">
      {% if block.settings.title %}
        <h2>{{ block.settings.title | escape }}</h2>
      {% else %}
        {{ page.title | escape }}
      {% endif %}
    </h1>
    {% if block.settings.banner_text %}
      {{ block.settings.banner_text }}
    {% endif %}
    <div class="rte">
      {{ page.content }}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "t:sections.main-page.name",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      },
      {
        "type": "text",
        "id": "title",
        "default": "Multicolumn",
        "label": "Banner Title"
      }, {
        "type": "richtext",
        "id": "banner_text",
        "default": "<p>Multicolumn</p>",
        "label": "Banner Text"
      }
    ]
  }
{% endschema %}